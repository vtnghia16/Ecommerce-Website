@model WebBanHangOnline.Models.EF.Category
@{
    ViewBag.Title = "Thêm mới danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



    <div class="card-header" style=" padding-left: 28px;">
        <h3 class="mb-1 mt-3">@ViewBag.Title</h3>
    </div>
    <!-- Default box -->

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("Add", "Category", FormMethod.Post, new { }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <!-- your steps content here -->
                            <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Thêm danh mục</label>
                                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tên danh mục" })
                                        @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Mô tả</label>
                                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                                </div>
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Thứ tự</label>
                                        @Html.TextBoxFor(x => x.Position, new { @class = "form-control", @Value = "1" })
                                </div>
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Seo title</label>
                                        @Html.TextAreaFor(x => x.SeoTitle, new { @class = "form-control" })
                                </div>
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Seo Description</label>
                                        @Html.TextAreaFor(x => x.SeoDescription, new { @class = "form-control" })
                                </div>
                                <div class="form-group form-label mb-3">
                                    <label for="exampleInputEmail1">Seo Keywords</label>
                                        @Html.TextAreaFor(x => x.SeoKeywords, new { @class = "form-control" })
                                </div>
                                <div class="form-group mt-4">
                                    <a href="/admin/category" class="dt-button add-new btn btn-danger">
                                        <span><i class='bx bx-arrow-back me-0 me-sm-1'></i>Quay lại</span>
                                    </a>
                                    <button type="submit" class="dt-button btn btn-primary ms-2 ml-1">
                                        <span><i class='bx bx-save me-0 me-sm-1'></i>Lưu</span>
                                    </button>
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

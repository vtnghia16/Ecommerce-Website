@model WebBanHangOnline.Models.EF.Adv

@{
    ViewBag.Title = "Thêm mới quảng cáo";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="card-header" style=" padding-left: 28px;">
    <h3 class="mb-1 mt-3">@ViewBag.Title</h3>
</div>
<!-- Default box -->

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Add", "Adv", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <!-- your steps content here -->
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1">Tiêu đề</label>
                                <div class="mt-2">
                                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "Tiêu đề" })
                                    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1">Ảnh đại diện</label>
                                <div class="mt-2">
                                    <div class="input-group">
                                        @Html.TextBoxFor(x => x.Image, new { @id = "txtImage", @class = "form-control" })
                                        <div class="input-group-text">
                                            <label type="button" onclick="BrowseServer('txtImage')">Tải ảnh</label>

                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1">Mô tả</label>
                                <div class="mt-2">

                                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1">Loại</label>
                                <div class="mt-2">

                                    @Html.TextBoxFor(x => x.Type, new { @class = "form-control", @Value = "1" })
                                </div>
                            </div>
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1" style="margin-right: 6px">Hiển thị</label>

                                @Html.CheckBoxFor(x => x.IsActive, new { @class = "form-check-input", @checked = "@checked" })

                            </div>
                            <div class="form-group form-label mb-3">
                                <label for="exampleInputEmail1">Đường dẫn</label>
                                <div class="mt-2">

                                    @Html.TextAreaFor(x => x.Link, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group mt-4">
                                <a href="/admin/adv" class="dt-button add-new btn btn-danger">
                                    <span><i class='bx bx-arrow-back me-0 me-sm-1'></i>Quay lại</span>
                                </a>
                                <button type="submit" class="dt-button btn btn-primary ms-2">
                                    <span><i class='bx bx-save me-0 me-sm-1'></i>Lưu</span>
                                </button>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span',
            })
        })

        // Truyền URL image
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>
}
